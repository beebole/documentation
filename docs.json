{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Beebole Help Center",
  "description": "Get help with Beebole’s time tracking app. Explore guides, FAQs, and tutorials on tracking time, managing projects, generating reports, and using Beebole’s features. Visit the Beebole Help Center for tips, troubleshooting, and step-by-step support.",
  "colors": {
    "primary": "#004D43",
    "light": "#B6D3D1",
    "dark": "#004D43"
  },
  "background": {
    "decoration": "gradient"
  },
  "favicon": "/help/favicon.svg",
  "logo": {
    "light": "/help/logo/logo.svg",
    "dark": "/help/logo/logo-dark.svg"
  },
  "appearance": {
    "default": "light",
    "strict": true
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Community",
          "icon": "house",
          "href": "https://slack.com"
        },
        {
          "anchor": "Contact us",
          "icon": "envelope",
          "href": "mailto:support@beebole.com"
        },
        {
          "anchor": "To beebole.com",
          "icon": "browser",
          "href": "https://beebole.com"
        }

      ]
    },
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "help/index",
              "help/documentation/quickstart",
              "help/documentation/projects",
              "help/documentation/people",
              "help/documentation/journal"
            ]
          },
          {
            "group": "Time Tracking",
            "pages": [
              "help/documentation/timesheets",
              "help/documentation/timesheetSettings",
              "help/documentation/approval"
            ]
          },
          {
            "group": "Reports",
            "pages": [
              "help/essentials/markdown",
              "help/essentials/code",
              "help/essentials/images",
              "help/essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "help/ai-tools/cursor",
              "help/ai-tools/claude-code",
              "help/ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "help/api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "help/api-reference/endpoint/get",
              "help/api-reference/endpoint/create",
              "help/api-reference/endpoint/delete",
              "help/api-reference/endpoint/webhook"
            ]
          }
        ]
      },
      {
        "tab": "Integrations",
        "groups": [
          {
            "group": "All integrations",
            "pages": [
              "help/integrations/asana",
              "help/integrations/jira",
              "help/integrations/trello"
            ]
          }
        ]
      },
      {
        "tab": "API",
        "groups": [
          {
            "group": "API",
            "pages": [
              "help/api/introduction",
              "help/api/schema-explorer"
            ]
          },
          {
            "group": "Queries",
            "pages": [
              "help/graphql/queries/getOrganisation",
              "help/graphql/queries/getPersons"
            ]
          }
        ]
      },
      {
        "tab": "News",
        "groups": [
          {
            "group": "News",
            "pages": [
              "help/news/releases"
            ]
          }
        ]
      }
    ]
  },
  "navbar": {
    "links": [
      {
        "label": "Contact Support",
        "href": "mailto:support@beebole.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Login",
      "href": "https://qa.beebole.com/signin"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}
