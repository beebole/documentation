{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Beebole Help Center",
  "description": "Get help with Beebole’s time tracking app. Explore guides, FAQs, and tutorials on tracking time, managing projects, generating reports, and using Beebole’s features. Visit the Beebole Help Center for tips, troubleshooting, and step-by-step support.",
  "colors": {
    "primary": "#004D43",
    "light": "#B6D3D1",
    "dark": "#004D43"
  },
  "background": {
    "decoration": "gradient"
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/logo.svg",
    "dark": "/logo/logo-dark.svg"
  },
  "appearance": {
    "default": "light",
    "strict": true
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Reports",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      },
      {
        "tab": "Integrations",
        "groups": [
          {
            "group": "All integrations",
            "pages": [
              "integrations/asana",
              "integrations/jira",
              "integrations/trello"
            ]
          }
        ]
      },
      {
        "tab": "GraphQL API",
        "groups": [
          {
            "group": "GraphQL Documentation",
            "pages": [
              "graphql/introduction",
              "graphql/schema-explorer"
            ]
          },
          {
            "group": "Queries",
            "pages": [
              "graphql/queries/getOrganisation",
              "graphql/queries/getPersons"
            ]
          }
        ]
      },
      {
        "tab": "News",
        "groups": [
          {
            "group": "News",
            "pages": [
              "news/releases"
            ]
          }
        ]
      }
    ]
  },
  "navbar": {
    "links": [
      {
        "label": "Contact Support",
        "href": "mailto:support@beebole.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Login",
      "href": "https://app.beebole-test.com/signin"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}
